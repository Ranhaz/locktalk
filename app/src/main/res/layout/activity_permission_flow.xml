<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/bg_shield"
    android:layoutDirection="rtl"
    android:padding="16dp"
    android:gravity="top">

    <!-- מכולה לטקסט; היא תופיע בחלק העליון -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/permissionFlowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אישורי הרשאות נדרשים"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/permissionFlowDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="4dp"
            android:text="האפליקציה זקוקה להרשאות הבאות:\n• גישה לאנשי קשר – להצפין שיחות עם אנשי הקשר שלך.\n• גישה לתמונות או קבצים – לשליחת תמונות מוצפנות.\n• הרשאת הצגה מעל אפליקציות – לניהול טקסט.\n• שירות נגישות – לאפשר הצפנת הודעות עם הסיומת :LOCK.\n\nאנא לחץ על ״קבל את כל ההרשאות״ כדי לאפשר הכול ולהמשיך." />

    </LinearLayout>

    <!-- Spacer שממלא את שאר המסך ודוחף את הכפתור למטה -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- כפתור בתחתית (MaterialButton) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGrantAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:padding="12dp"
        android:text="קבל את כל ההרשאות"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="8dp"/>
</LinearLayout>
