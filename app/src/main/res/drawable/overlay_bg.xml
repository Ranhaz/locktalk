<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- צבע רקע לבן עם שקיפות (80% אטימות) -->
    <solid android:color="#CCFFFFFF" />

    <!-- עיגול פינות ברדיוס 8dp -->
    <corners android:radius="8dp" />

    <!-- פנימיות Padding פנימי של 4dp מכל צד -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- קו גבול דק (1dp) בגוון אפור בהיר -->
    <stroke
        android:width="1dp"
        android:color="#88CCCCCC" />

</shape>
