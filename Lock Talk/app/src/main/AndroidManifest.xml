<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.locktalk_01">
    <queries>
        <!-- בודקים אם מותקן WhatsApp רגיל -->
        <package android:name="com.whatsapp" />
        <!-- או WhatsApp Business -->
        <package android:name="com.whatsapp.w4b" />
    </queries>

    <!-- התאמה בסיסית לחומרה מצלמה (לא חובה) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- הרשאות כלליות + התמיכה בגרסאות אנדרואיד ישנות וחדשות -->
    <!-- עבור אנדרואיד 13+: READ_MEDIA_IMAGES (ואם צריך וידאו/אודיו, הוסף READ_MEDIA_VIDEO/READ_MEDIA_AUDIO).
         עבור גרסאות ישנות: READ_EXTERNAL_STORAGE עדיין רלוונטית. -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- בגרסאות 13+ ההרשאה READ_EXTERNAL_STORAGE מוחלפת ב-READ_MEDIA_IMAGES, אבל אפשר לשמור:
         maxSdkVersion="32" כדי למנוע בעיות באנד. 13 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- עבור אנדרואיד 13 (מה-API 33) אם רוצים לקרוא תמונות -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        tools:targetApi="33" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- מסך ראשון (SplashActivity) -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- שאר המסכים -->
        <activity android:name="com.example.locktalk_01.activities.LoginActivity" />
        <activity android:name="com.example.locktalk_01.activities.RegisterActivity" />
        <activity android:name="com.example.locktalk_01.activities.AccessibilityPermissionActivity" />
        <activity android:name="com.example.locktalk_01.activities.ContactSelectionActivity" />
        <activity android:name="com.example.locktalk_01.activities.KeyGenerationActivity" />
        <activity android:name="com.example.locktalk_01.activities.MainActivity" />

        <!-- מסך בקשת הרשאות מרוכז -->
        <activity android:name=".activities.PermissionFlowActivity" />

        <!-- שירות הנגישות -->
        <service
            android:name=".services.MessageAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- לבחירת/הצפנת תמונה -->
        <activity
            android:name=".activities.SendImageActivity"
            android:exported="true" />

        <!-- קולט הודעות -->
        <receiver
            android:name="com.example.locktalk_01.receivers.MessageReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.locktalk.NEW_MESSAGE" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
